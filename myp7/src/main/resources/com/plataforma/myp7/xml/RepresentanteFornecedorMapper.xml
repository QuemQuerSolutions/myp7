<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.plataforma.myp7.mapper.RepresentanteFornecedorMapper">
	
	<resultMap type="RepresentanteFornecedor" id="mapSimples">
		<result property="idFornecedor" column="ID_FORNECEDOR" /> 
		<association property="representante" column="ID_REPRESENTANTE" select="com.plataforma.myp7.mapper.RepresentanteMapper.obterPorId"/>
	</resultMap>
	
	<sql id="selectRepresentanteFornecedor">
		SELECT ID_REPRESENTANTE, ID_FORNECEDOR
			FROM rpr_representante_fornecedor
	</sql>

	<select id="obterPorFornecedor" resultMap="mapSimples">
		<include refid="selectRepresentanteFornecedor" />
		where ID_FORNECEDOR = #{idFornecedor}
	</select>
	
	<insert id="insert">
		INSERT INTO rpr_representante_fornecedor
			(ID_REPRESENTANTE, ID_FORNECEDOR) 
		VALUES 
			(#{representante.idRepresentante}, #{idFornecedor})
	</insert>	
	
	<delete id="deletePorFornecedor">
		DELETE FROM rpr_representante_fornecedor WHERE ID_FORNECEDOR = #{idFornecedor} 
	</delete>
	
</mapper>
