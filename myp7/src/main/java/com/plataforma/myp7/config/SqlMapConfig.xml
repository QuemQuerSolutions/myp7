<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
 
<configuration>
 
    <typeAliases>
        <typeAlias alias="Usuario" type="com.plataforma.myp7.data.Usuario"/>
        <typeAlias alias="Parametro" type="com.plataforma.myp7.data.Parametro"/>
        <typeAlias alias="HistoricoSenha" type="com.plataforma.myp7.data.HistoricoSenha"/>
        <typeAlias alias="ParametroDominio" type="com.plataforma.myp7.data.ParametroDominio"/>
        <typeAlias alias="ParametroTipo" type="com.plataforma.myp7.data.ParametroTipo"/>
        <typeAlias alias="Embalagem" type="com.plataforma.myp7.data.Embalagem"/>
        <typeAlias alias="Embalagem" type="com.plataforma.myp7.data.Produto"/>
    </typeAliases>
 
 	<environments default="development">
        <environment id="development">
          <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/myp7db"/>
                <property name="username" value="root"/>
                <property name="password" value="admin"/>
            </dataSource>
       </environment>
    </environments>
 
    <mappers>
       <mapper resource="com/plataforma/myp7/xml/UsuarioMapper.xml"/>
	   <mapper resource="com/plataforma/myp7/xml/HistoricoSenhaMapper.xml"/>
       <mapper resource="com/plataforma/myp7/xml/ParametroMapper.xml"/>
       <mapper resource="com/plataforma/myp7/xml/ParametroDominioMapper.xml"/>
       <mapper resource="com/plataforma/myp7/xml/ParametroTipoMapper.xml"/>
       <mapper resource="com/plataforma/myp7/xml/EmbalagemMapper.xml"/>
       <mapper resource="com/plataforma/myp7/xml/ProdutoMapper.xml"/>
    </mappers>
 
</configuration>